extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h2 Task Page
    
        .w3-container(method="POST")
            fieldset
                label Id    
                input.w3-input.w3-round(type="text" name="id" readonly value="${t.id}")
                label Name
                input.w3-input.w3-round(type="text" name="nome" readonly value="${t.nome}")
                label Due Date
                input.w3-input.w3-round(type="text" name="duedate" readonly value="${t.duedate}")
                label Who
                input.w3-input.w3-round(type="text" name="who" readonly value="${t.who}")
                label What
                input.w3-input.w3-round(type="text" name="what" readonly value="${t.what}")
                each t in tList
                    if t.done
                        label Done
                        input.w3-input.w3-round(type="text" name="done" value="${t.done}")
        footer.w3-container.w3-blue
            h5 Generated by TPC5 server in #{d} - 
            a(href="/") Return